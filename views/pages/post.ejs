<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- <style>
      ul > :first-child {
          background: rgb(238, 247, 133);
      }
    </style> -->
</head>

<body>
    <a href="/">Home</a>
    <br>
    <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            
            <% if (loggedin && favorite !== true) { %>
              <form action="/posts/<%= post.pid %>/addFavorite" method="post">
                <button type="submit">Favorite</button>
              </form>
            <% }; %>

            <div class="card-content white-text">
              <span class="card-title"><strong><%= post.name %></strong> <%= post.content %></span>
            </div>
            <ul>
              <% comments.forEach(function(comment) { %>
                  <li>
                      <strong><%= comment.name %></strong> <%= comment.content %>
              <% }); %>
            </ul>
            <% if (loggedin) { %>
              <div class="card-action">
                <form action="/posts/<%= post.pid %>/addComment" method="post">
                    <input placeholder="comment" type="text" id="content" name="content"/>
                    <input type="submit" name="submit" value="Submit">
                </form>
            </div>
            <% }; %>
          </div>
          <h5>Related Content</h5>
          <a href="/posts/<%= related.pid %>"><%= related.content %></a>
        </div>
      </div>
</body>
</html>


