<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>

<body>
    <a href="/">Home</a>
    <br>
    <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><strong><%= post.author %></strong> <%= post.content %></span>
            </div>
            <ul>
              <% comments.forEach(function(comment) { %>
                  <li>
                      <strong><%= comment.author %></strong> <%= comment.content %>
              <% }); %>
            </ul>
            <div class="card-action">
                <form action="/posts/<%= post.pid %>/addComment" method="POST">
                    <input placeholder="Name" type="text" id="author" name="author"/>
                    <input placeholder="comment" type="text" id="content" name="content"/>
                    <input type="submit" name="submit" value="Submit">
                </form>
            </div>
          </div>
        </div>
      </div>
</body>
</html>


